<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp8"
    android:layout_marginBottom="@dimen/dp8"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:background="@drawable/selector_basic_language_layout"
    >

    <RelativeLayout android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:paddingStart="16.0dip"
        android:paddingEnd="4.0dip"
        android:id="@+id/rlLangaugeRow"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewLanguageItemContentStyle"
            android:text="@string/string_language"
            android:id="@+id/tvLanguage"
            android:drawablePadding="15dp"
            android:layout_centerVertical="true"
            android:gravity="start|center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

    </RelativeLayout>


</LinearLayout>