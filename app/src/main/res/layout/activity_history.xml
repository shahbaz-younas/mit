<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/white_normal"
    android:clipChildren="false" android:clipToPadding="false" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="56.0dip">

        <ImageView
            android:layout_gravity="start|center"
            android:id="@+id/imgvRecentlySearchBack"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:src="@drawable/icon_left_back_arrow" />

        <TextView
            android:textColor="@color/main_text"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:text="@string/recent_search"
            android:maxLines="1"
            android:layout_marginStart="60.0dip"
            android:layout_marginEnd="60.0dip"
            app:fontFamily="@font/avenir_next_bold"
            style="@style/TitleBarContentTextStyle" />


    </FrameLayout>

    <View style="@style/AppTheme.SingleHorizontalLineStyle"
        android:id="@+id/vFiltertoolbar"
        />


    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvRecentHorizontalmax"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp8"
        android:clipToPadding="false" />

    <FrameLayout android:layout_width="fill_parent" android:layout_height="44.0dip"
        android:layout_marginTop="16.0dip" android:layout_marginBottom="24.0dip"
        android:layout_marginStart="16.0dip" android:layout_marginEnd="16.0dip">

        <TextView android:textSize="16.0sp" android:textColor="#ffffffff"
            android:gravity="center" android:layout_gravity="center"
            android:id="@+id/tv_send_common_msg"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:background="@drawable/shape_corner_44dp_purple_5158ff_solid"
            android:visibility="gone" android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:text="@string/send_message"
            android:fontFamily="@font/avenir_next_bold" />

    </FrameLayout>




</LinearLayout>