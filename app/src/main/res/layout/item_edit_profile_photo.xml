<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white_gray_fcfbfa"
    app:cardCornerRadius="4.0dip" app:cardElevation="2.0dip"
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/dp4"
    android:layout_marginBottom="@dimen/dp4"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:id="@+id/cvItemImages"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.videocall.mito.Utils.FrameLayoutForRatio
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView android:id="@+id/iv_edit_profile_photo"
            android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" />

        <TextView android:textSize="@dimen/xxx_small_font"
            android:textColor="@color/white_normal"
            android:layout_gravity="start|center|top"
            android:id="@+id/tv_edit_profile_count"
            android:layout_width="9.0dip"
            android:layout_height="19.0dip"
            android:layout_marginTop="4.0dip"
            android:shadowColor="@color/black_3d000000"
            android:shadowRadius="3.0"
            android:fontFamily="@font/avenir_next_bold"
            android:layout_marginStart="6.0dip" />

        <ImageView
            android:layout_gravity="end|bottom|center"
            android:id="@+id/iv_edit_profile_add"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_margin="4.0dip"
            android:src="@drawable/icon_add_photo" />

        <ImageView
            android:layout_gravity="end|bottom|center"
            android:id="@+id/iv_edit_profile_delete"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_margin="4.0dip"
            android:visibility="gone"
            android:src="@drawable/icon_delete_photo" />

        <View android:id="@+id/v_photo_mask"
            android:visibility="gone" android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ProgressBar android:theme="@style/AppTheme.WhiteAccent"
            android:layout_gravity="end|bottom|center"
            android:id="@+id/pg_uploading"
            android:visibility="gone"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_margin="4.0dip" />

    </com.videocall.mito.Utils.FrameLayoutForRatio>

</androidx.cardview.widget.CardView>