<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rl_slide_wrapper" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:id="@+id/imgvPhotoUserAnswerCall"
            android:visibility="visible"
            android:layout_width="144dp"
            android:layout_height="144dp"
            app:civ_border_color="@color/red_ff5346"
            app:civ_border_width="3dp"
            android:src="@drawable/icon_register_select_header"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_normal_darker"
            android:layout_marginTop="@dimen/dp5"
            android:textSize="@dimen/xx_large_font"
            android:fontFamily="@font/avenir_next_demibold"
            android:id="@+id/tvNameAgeSexAnswerCall"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:orientation="horizontal"
            >

            <com.hbb20.CountryCodePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_normal_darker"
                android:id="@+id/ccpCountryAnswerCall"
                app:ccp_showArrow="false"
                app:ccp_showFullName="false"
                app:ccp_showFlag="true"
                app:ccp_autoDetectCountry="false"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="false"
                android:layout_marginRight="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_gravity="center"
                android:gravity="center"
                app:ccp_flagBorderColor="@color/white_normal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_normal_darker"
                android:textSize="@dimen/xx_large_font"
                android:fontFamily="@font/avenir_next_demibold"
                android:id="@+id/tvCountryAnswerCall"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>
        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="57.0dip"
            android:layout_gravity="center"
            >

            <ImageView android:id="@+id/video_answer_accept"
                android:visibility="visible" android:layout_width="64.0dip"
                android:layout_height="64.0dip" android:src="@drawable/icon_call_accept" />
            <ImageView android:id="@+id/video_answer_reject"
                android:visibility="visible" android:layout_width="64.0dip"
                android:layout_height="64.0dip" android:src="@drawable/icon_call_cancel"
                android:layout_marginStart="28.0dip" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>